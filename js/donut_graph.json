{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Total CO2 emissions per year (tonnes)",
  "height": 500,
  "width": 500,
  "data": {"url": "data/co2_emission.csv"},
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "Annual","aggregate": "sum", "type": "quantitative"},
    "color": {"field": "Entity", "type": "nominal"},
    "order": {"field": "Annual", "sort": "descending"}
  },
  "layer": [{
    "mark": {"type": "arc", "outerRadius": 150, "stroke": "#fff"}},
    {
    "mark": {"type": "text", "radius": 175, "fill": "#202630"},
    "encoding": {
      "text": {"field": "Entity", "type": "quantitative"}
    }
    }],
  "view": {"stroke": null}
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "5 largest contributers to CO2 release",
  "height": 500,
  "width": 500,
  "data": {"url": "data/co2_emission.csv"},

  "transform":[
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "Annual", "order": "descending" }]
    },
    {"filter": "datum.rank <= 5"}
  ],

  "mark": {"type": "arc", "innerRadius": 50},

  "encoding": {
    "theta": {"field": "Annual","aggregate": "sum", "type": "quantitative", "sort": { "field": "Annual", "op": "average", "order": "descending" }},
    "color": {"field": "Entity", "type": "nominal"}
  },





  "view": {"stroke": null}
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Annual CO2 Emmisions (2010, Tonnes)",
  "width": 800,
  "height": 600,

  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },

  "params": [{
      "name": "Year_At",
      "value": 1970,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2017,
        "step": 1,
        "name": "Data for year: "
    }
  }],

  "transform": [
    {
      "lookup": "properties.ADM0_A3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/mhammham/mhammham.github.io/master/data/co2_emission_2010.csv"
        },
        "key": "Code",
        "fields": ["Annual"]
      }
    },
    {"calculate": "datum.Annual + 1", "as": "Emmisions"}
  ],

  "selection": {
    "SelectYear": {
      "type": "single",
      "fields": ["Year"],
      "bind": {
        "Year": {"input": "range", "min": 1970,"max": 2017,"step": 1}
      }
    }
  },

  "projection": {
    "type": "equirectangular"
  },

  "mark": {
    "type": "geoshape"
    },

  "encoding": {
    "color": {
      "field": "Emmisions",
      "type": "quantitative",
      "scale": {"type": "log"},
      "scale": {"scheme": "Oranges"},
      "condition": {
        "selection": "SelectYear",
        "field": "Annual", "type": "nominal"
      },
    },

    "tooltip": [
      {"field": "properties.ADM0_A3", "type": "nominal", "title": "Code"},
      {"field": "Annual", "type": "quantitative"}
    ]
  }
}
